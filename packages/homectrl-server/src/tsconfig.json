{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "strict": true,
    // zwave-js is not strict compliant
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../lib",
    "incremental": true,
    "declaration": false,
    "sourceMap": true
  }
}
